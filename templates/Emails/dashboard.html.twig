<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8"/>
    {{ encore_entry_link_tags('app-css') }}
</head>
<body>
<nav class="navbar navbar-light bg-light">
    <img src="{{ asset('build/images/logo-minefi.png') }}" style="position: inherit; left:40%;width:20%">
</nav>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-sm  ">
                    <thead>
                    <tr>
                        <th scope="col" class="text-center" style="color: #0086FB; font-family: 'Montserrat',sans-serif;" >Date</th>
                        <th scope="col" class="text-center" style="color: #0086FB; font-family: 'Montserrat',sans-serif;">Fichier</th>
                        <th scope="col" class="text-center" style="color: #0086FB; font-family: 'Montserrat',sans-serif;">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if files|length ==0 %}
                    <tr class="blank_row">
                        <td colspan="3" style="font-family: 'Montserrat',sans-serif;">No data</td>
                    </tr>
                    {% endif %}
                    {% for file in files %}
                        <tr>
                            <td style="font-family: 'Montserrat',sans-serif;">{{ file.date|date('d-m-Y H:i:s') }}</td>
                            <td><a title="{{ file.path }}" style="font-family: 'Montserrat',sans-serif;"> {{ file.name }}</a></td>
                            <td><a href="{{ file.download }}" ><i class="fas fa-download"></i></a>
                                <a href="{{ file.view }}" target="_blank"><i class="fas fa-search"></i></a>
                                <a href="{{ file.delete }}"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

</body>
</html>
